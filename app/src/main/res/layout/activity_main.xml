<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp" >

<RelativeLayout
android:layout_width = "match_parent"
android:layout_height = "match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"

                            >
    <ImageView
        android:id="@+id/imgProfile"
    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:src="@drawable/profile"
    />
    <ImageView
        android:id="@+id/imgBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/edNotifi"
        android:layout_toEndOf="@id/btnRDV"
        android:layout_toRightOf="@+id/btnRDV"
        android:src="@drawable/brand"
        />


    <TextView
        android:id="@+id/txtUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imgProfile"
        android:text="Utilisateur de l'application"
        android:textColor="#000000"

        android:textSize="30sp"

        />
    <TextView
        android:id="@+id/txtResume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtUser"
        android:text="Résumé"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="25sp"
        />
    <TextView
        android:id="@+id/txtNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="25sp"

        android:layout_below="@+id/txtUser"
        android:text="Nombre"
        android:textColor="#000000"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/txtRendezvous"
           android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtResume"
        android:text="Rendez-vous"
        android:textColor="#000000"
        android:textSize="20sp"


        />
    <EditText
        android:id="@+id/edRDV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtNombre"
       android:inputType="number"
        android:background="@android:color/transparent"
        android:text="1"
        android:textSize="20sp"



        />

    <TextView
        android:id="@+id/txtSuivis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtRendezvous"
        android:text="Suivis"
        android:textColor="#000000"
        android:textSize="20sp"


        />
    <EditText
        android:id="@+id/edSuivi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/edRDV"
        android:inputType="number"
        android:background="@android:color/transparent"
        android:text="2"
        android:textSize="20sp"


        />
    <TextView
        android:id="@+id/txtNotifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtSuivis"
        android:text="Notifications"
        android:textColor="#000000"
        android:textSize="20sp"


        />
    <EditText
        android:id="@+id/edNotifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/edSuivi"
        android:background="@android:color/transparent"
        android:inputType="number"
        android:text="7"
        android:textSize="20sp"


        />
    <RadioButton
        android:id="@+id/btnRDV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Rendez-vous"
        android:layout_below="@+id/txtNotifications"


        />
    <RadioButton
        android:id="@+id/btnSuivi"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suivis"
      android:layout_below="@+id/btnUrgence"
        />
    <RadioButton
        android:id="@+id/btnUrgence"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Urgence"
       android:layout_below="@+id/btnRDV"

        tools:ignore="NotSibling" />
    <Button
        android:id="@+id/btnAnnul"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgBrand"
        android:text="ANNULER"


        />
    <Button
        android:id="@+id/btnEnvoi"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgBrand"

        android:text="ENVOYER"


        />


</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>